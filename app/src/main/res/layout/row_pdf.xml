<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:contentPadding="10dp"
    android:layout_marginBottom="5dp"
    app:cardUseCompatPadding="true"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <ImageView
            android:id="@+id/thumbnailIv"
            android:layout_width="65dp"
            android:layout_height="80dp"
            android:src="@drawable/baseline_picture_as_pdf_24"
            android:adjustViewBounds="true"
            >

        </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/thumbnailIv"
            >

            <TextView
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:text=" PDF Name"

                >

            </TextView>

            <TextView
                android:id="@+id/pagesTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 0 pages"
                android:layout_below="@id/nameTv"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="20dp"
                >

            </TextView>

            <TextView
                android:id="@+id/sizeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 0 bytes"
                android:layout_below="@id/nameTv"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_marginBottom="2dp"
                android:textSize="12sp"
                android:layout_toEndOf="@id/pagesTv"
                android:layout_marginTop="5dp"
                >

            </TextView>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/moreBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:src="@drawable/baseline_expand_more_24_gray"
            android:background="@android:color/transparent"
            >

        </ImageButton>

        <TextView
            android:id="@+id/dateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd/mm/yyyy"
            android:layout_below="@id/moreBtn"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            >

        </TextView>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>